      "Location": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "address": {
            "type": "string"
          },
          "lat": {
            "type": "number",
            "minimum": -90,
            "maximum": 90
          },
          "lng": {
            "type": "number",
            "minimum": -180,
            "maximum": 180
          }
        },
        "required": ["address", "lat", "lng"]
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "User is not authorized"
      },
      "EndpointNotFound": {
        "description": "Endpoint not found"
      },
      "Forbidden": {
        "description": "Access is forbidden"
      }
    },
    "securitySchemes": {
